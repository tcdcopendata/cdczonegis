    <script src="/map/javascripts/admin_permission.js"></script>
    <script src="/map/javascripts/user_apply.js"></script>
    <script>
    init();

    function init() {
    $('#divDropdownCity').hide();
    $('#divDropdownUnit').hide();
    userOrgList();

    $("#selectDropdownLevel").on('click', 'li a', function () {
        selectDropdownLevel($(this).text());
    });

    $("#selectDropdownCity").on('click', 'li a', function () {
        selectDropdownCity($(this).text());
    });

    $("#selectDropdownUnit").on('click', 'li a', function () {
        selectDropdownUnit($(this).text());
    });
}
    </script>
</body>

